<p id="notice"><%= notice %></p>

<% user ||= current_user %>

<h1>Rented movies</h1>

<ul>
  <li> <%= link_to("Accueil", "/home") %> </li>
  <% if user_signed_in?  %>
  <li>Compté connecté : <%= current_user.email %> </li>
  <li> <%= link_to("Voir les films", "/movies") %> </li>
  <li> <%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
  <% if user.admin? %>
  <li> <%= link_to("Utilisateurs", "/users") %> </li>
  <% end %>
  <% else  %>
  <li>  <%= link_to("Login", new_user_session_path) %></li>
  <li>  <%= link_to("Inscription", new_user_registration_path) %></li>
  <% end  %>
</ul>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Producer</th>
      <th>Description</th>
      <th>Release date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie|
      unless movie.status == false %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.producer %></td>
        <td><%= movie.description %></td>
        <td><%= movie.release_date %></td>
        <% if user.admin? %>
        <td><%= link_to 'Unrent', controller: "movies", action: "unrent", id: movie.id %></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
